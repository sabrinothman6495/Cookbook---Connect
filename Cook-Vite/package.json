{
  "name": "recipe-sharing-app-client",
  "version": "1.0.0",
  "description": "Client side of the Recipe Sharing App built with React and Vite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "vite",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mantine/carousel": "^6.0.0",
    "@mantine/core": "^6.0.0",
    "@mantine/form": "^6.0.0",
    "@mantine/hooks": "^6.0.0",
    "@mantine/modals": "^6.0.0",
    "@tabler/icons-react": "^3.20.0",
    "axios": "^1.4.0",
    "jwt-decode": "^4.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.14.0",
    "react-share": "^5.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^8.40.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not < 0.2%"
  ]
}
